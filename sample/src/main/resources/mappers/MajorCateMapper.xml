<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mappers.MajorCateMapper">

	<!-- 대분류 생성 해주는 부분 -->
	<insert id="setMajorCate">
		INSERT INTO
					 majorCate 
		SET
					majorCode = #{majorCode},
					majorName = #{majorName}
	</insert>
	
	<!-- 대분류 보여 주는 부분 -->
	<select id="getMajorCateList" resultType="majorvo">
	    SELECT 	
	    		majorCode, majorName 
	    FROM 	
	    		majorCate
	    ORDER BY 
	    		majorCode ASC
	</select>
	
	<!-- 대분류 삭제 하는 부분 -->
	<delete id="setMajorDelete">
		DELETE FROM 
					majorCate 
			WHERE 	
					majorCode = #{majorCode}
	</delete>

	<!--최대 7개까지만  대분류 생성 체크 -->
	<select id="getMajorCateTotal" resultType="int">
		SELECT 
				COUNT(majorCode) 
		FROM 
				majorCate
	</select>	

	<!-- 중복되는 대분류 코드 체크 -->
	<select id="getMajorCateCountOne" resultType="int">
		
		SELECT COUNT(majorCode) FROM majorCate WHERE majorCode = #{majorCode}
		
	</select>
</mapper>
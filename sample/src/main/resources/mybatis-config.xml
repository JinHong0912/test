<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-config.dtd">
<!-- 길게 적어야 하는 것을 짧게 만들기 위해서 사용한다. configuration -->
<configuration>
	<typeAliases>
		<!-- 긴 별명을 변경하는 문장 : alias = "uservo" 긴 문장을 이렇게 사용 한다. -->
		<typeAlias type="com.greenart.sample.model.UserVO" alias = "uservo"/>
		<typeAlias type="com.greenart.sample.model.BoardVO" alias = "boardvo"/>
		<typeAlias type="com.greenart.sample.model.ArticleVO" alias = "articlevo"/>
		<typeAlias type="com.greenart.sample.model.CommentVO" alias = "commentvo"/>
		<typeAlias type="com.greenart.sample.model.MajorCateVO" alias = "majorvo"/>
	</typeAliases>
</configuration>